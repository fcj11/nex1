<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/login_textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/font_color"
        android:text="@string/login_title"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp"
        android:textSize="@dimen/login_textsize"/>

    <EditText
        android:id="@+id/Login_editText1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit_loging_selector"
        android:drawableLeft="@mipmap/user"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="@color/font_color"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/hint_textColor" />

    <EditText
        android:id="@+id/Login_editText2"
        style="@style/login_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@mipmap/pass"
        android:drawablePadding="8dp"
        android:hint="@string/password"
        android:padding="5dp"
        android:textColor="@color/font_color"
        android:layout_marginTop="25dp"
        android:textColorHint="@color/hint_textColor"
        android:ems="10"
        android:inputType="textPassword" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/login_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="2dp"
            android:text="@string/forgetpsw"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/Login_imageView1"
            android:layout_width="77dp"
            android:layout_height="68dp"
            android:layout_marginStart="304dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/login" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="bottom"
            android:text="@string/nouser"
            android:layout_weight="1"
            android:textColor="@color/font_color"
            android:textColorHint="@color/hint_textColor" />

        <TextView
            android:id="@+id/login_textView4"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/reg"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>